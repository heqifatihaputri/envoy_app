<div class="wrapper">
<p id="notice"><%= notice %></p>

<h1>Invites</h1>

<div>
  <%= form_tag invites_path, :method => 'get' do %>
  <%= label_tag(:search, "") %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "Searching Invites" %>
      <%= submit_tag "Search" %>
    </p><br>
  <% end %>
</div>

<div class="search-date">
  <%= form_tag invites_path, :method => 'get' do %>
  <%= label_tag(:date, "") %>
    <p>
      <%= date_field_tag :date, params[:date] %>
      <%= submit_tag "Submit" %>
    </p><br>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Arrival</th>
      <th>Full name</th>
      <th>Visitor Email Address</th>
      <th>Host</th>
      <th>Private notes</th>
      <th>Signed In</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.location_id %></td>
        <td><%= invite.arrival %></td>
        <td><%= invite.full_name %></td>
        <td><%= invite.email_visitor %></td>
        <td><%= invite.host %></td>
        <td><%= invite.private_notes %></td>
        <td><%= invite.sign_in_time %></td>
        <td>
          <% if invite.signed_in? %>
            <%= link_to 'Sign Out' %>
          <% else %>
            <%= link_to 'Sign In' %>
          <% end %>
        </td>
        <td><%= link_to 'Delete Visitor', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>

<%= link_to 'Bulk create invites', bulk_invites_path %>
</div>