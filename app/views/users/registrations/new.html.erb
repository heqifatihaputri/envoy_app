<div class="title">
  <h2>Sign up</h2>
</div>

<div class="wrapper">
<%= form_for(:user, url: registration_path(resource_name)) do |f| %>


  <div class="field">
    Select which solutions you'd like to try!<br>
    <%= f.radio_button :role_id, 4, :checked => true %> 
    <%= label :role_id, 'deliveries' %>
    <%= f.radio_button :role_id, 5 %>
    <%= label :role_id, 'visitors' %>
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<div class="wrapper-text">
<%= render "devise/shared/links" %>

<%= link_to "Back", :back %>
</div>
</div>